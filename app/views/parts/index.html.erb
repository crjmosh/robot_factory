<h1 class="center">Parts for Robot: <%= @robot.name %></h1>

<div class="container center">
	<% if @parts.any? %>
		<ul class="collapsible" data-collapsible="accordion">
			<% @parts.each do |part| %>
		    <li>
		    <div class="collapsible-header"><%= part.name %></div>
		      <div class="collapsible-body">
		      	<p>Part: <%= part.number %></p>
		      	<%= link_to 'Edit', edit_robot_part_path(@robot, part) %> | 
		      	<%= link_to 'Delete', robot_part_path(@robot, part),
		      		method: :delete, data: {confirm: 'Really delete?'} %>
		      		<br><br>
		      </div>
		    </li>
			<% end %>
	  </ul>
	<% else %>
		<h4>No parts, please create one.</h4>
	<% end %>

	<%= link_to 'New Part', new_robot_part_path(@robot), class: 'btn' %>
	<br><br>
	<%= link_to '<< Back', inventor_robot_path(@inventor, @robot), class: 'btn' %>
</div>